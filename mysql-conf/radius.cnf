[mysqld]
# Performance settings for 500-1000 concurrent sessions
max_connections = 500
innodb_buffer_pool_size = 1G
innodb_log_file_size = 256M
innodb_flush_log_at_trx_commit = 2
innodb_flush_method = O_DIRECT

# InnoDB performance tuning
innodb_write_io_threads = 16
innodb_read_io_threads = 16
innodb_io_capacity = 4000
innodb_io_capacity_max = 8000
innodb_buffer_pool_instances = 8
innodb_thread_concurrency = 0
innodb_lock_wait_timeout = 50

# Character set
character-set-server = utf8mb4
collation-server = utf8mb4_unicode_ci

# Query cache removed in MySQL 8.0 (no longer supported)
# query_cache_size and query_cache_type removed - not needed

# Logging
slow_query_log = 1
slow_query_log_file = /var/log/mysql/slow.log
long_query_time = 2

# Connection settings
wait_timeout = 600
interactive_timeout = 600
max_allowed_packet = 32M
connect_timeout = 10

# Network optimization
skip-name-resolve = 1
max_connect_errors = 1000000
back_log = 500

# Performance Schema (disable for production to save memory)
performance_schema = OFF

# Binary logging (disable for better performance if not needed)
skip-log-bin

# Table open cache for better performance
table_open_cache = 4000
table_definition_cache = 2000

# Thread pool for better concurrency
thread_cache_size = 100

# Sort and join buffer optimization
sort_buffer_size = 2M
join_buffer_size = 2M
read_buffer_size = 1M
read_rnd_buffer_size = 2M

# Temporary table settings
tmp_table_size = 64M
max_heap_table_size = 64M