# =================================================================================
# FreeRADIUS Google LDAP Configuration Template
# =================================================================================
# Copy this file to .env and customize the values below for your environment.
# Required: Google Workspace with Secure LDAP enabled

# =================================================================================
# NETWORK CONFIGURATION
# =================================================================================
# Network range allowed to access FreeRADIUS server (usually your Access Points)
ACCESS_ALLOWED_CIDR=10.10.0.0/16

# RADIUS shared secret (change this!)
SHARED_SECRET=testing123

# =================================================================================
# GOOGLE LDAP CONFIGURATION
# =================================================================================
# Your domain configuration - update these with your actual domains
BASE_DOMAIN=yourdomain
DOMAIN_EXTENSION=com

# Google LDAP certificate paths (these point to mounted cert files)
GOOGLE_LDAPTLS_CERT=/etc/freeradius/certs/ldap-client.crt
GOOGLE_LDAPTLS_KEY=/etc/freeradius/certs/ldap-client.key

# =================================================================================
# DATABASE CONFIGURATION
# =================================================================================
# MySQL database settings
DB_HOST=mysql
DB_PORT=3306
DB_NAME=radius
DB_USER=radius
DB_PASSWORD=radiuspass
DB_ROOT_PASSWORD=rootpass

# Database performance settings
DB_MAX_CONNECTIONS=20
ENABLE_SQL_TRACE=false

# MySQL timezone setting
# Used for container timezone and MySQL timestamps
# Examples: UTC, Asia/Kolkata, America/New_York, Europe/London, Asia/Tokyo
MYSQL_TIMEZONE=UTC

# MySQL timezone offset (use format: +HH:MM or -HH:MM)
# Common timezone offsets:
#   +05:30 (IST - India Standard Time)
#   +00:00 (UTC - Coordinated Universal Time)
#   -05:00 (EST - Eastern Standard Time)
#   +01:00 (CET - Central European Time)
#   +09:00 (JST - Japan Standard Time)
#   +08:00 (CST - China Standard Time)
#   -08:00 (PST - Pacific Standard Time)
MYSQL_TIMEZONE_OFFSET=+00:00

# =================================================================================
# DOCKER COMPOSE SETTINGS
# =================================================================================
# Container ports
RADIUS_AUTH_PORT=1812
RADIUS_ACCT_PORT=1813
MYSQL_PORT=3306
DASHBOARD_PORT=8080

# =================================================================================
# DASHBOARD CONFIGURATION
# =================================================================================
# Admin dashboard credentials (change these!)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@yourdomain.com

# Dashboard security settings
JWT_SECRET=your-jwt-secret-key-min-32-characters-here
SESSION_COOKIE_SECURE=false
FORCE_PASSWORD_CHANGE=true
ADMIN_SESSION_TIMEOUT=3600
BCRYPT_ROUNDS=12

# =================================================================================
# DOMAIN & VLAN CONFIGURATION
# =================================================================================
# Configure your domains for VLAN assignment
DOMAIN_1=yourdomain.com
DOMAIN_2=students.yourdomain.com
DOMAIN_3=guests.yourdomain.com

# Domain classifications for VLAN assignment
STAFF_DOMAINS=yourdomain.com
STUDENT_DOMAINS=students.yourdomain.com
GUEST_DOMAINS=guests.yourdomain.com

# Advanced domain configuration (JSON format)
DOMAIN_CONFIG=[{"domain":"yourdomain.com","Type":"Staff","VLAN":"10"},{"domain":"students.yourdomain.com","Type":"Student","VLAN":"20"},{"domain":"guests.yourdomain.com","Type":"Guest","VLAN":"30"}]

# =================================================================================
# PERFORMANCE & LOGGING
# =================================================================================
# Connection limits and performance tuning
RADIUS_MAX_CONNECTIONS=50
LDAP_MAX_CONNECTIONS=10
LOG_LEVEL=info
ENABLE_LDAP_DEBUG=false

# =================================================================================
# SECURITY NOTES
# =================================================================================
# BEFORE PRODUCTION DEPLOYMENT:
# 1. Change all default passwords (SHARED_SECRET, DB_PASSWORD, ADMIN_PASSWORD)
# 2. Update ACCESS_ALLOWED_CIDR to restrict access to your AP networks only
# 3. Place your Google LDAP certificates in the 'certs' directory:
#    - certs/ldap-client.crt (Google LDAP client certificate)
#    - certs/ldap-client.key (Google LDAP client private key)
# 4. Update domain configuration to match your Google Workspace domains
# 5. Enable HTTPS for dashboard in production (set SESSION_COOKIE_SECURE=true)
# 6. Never commit this .env file to version control